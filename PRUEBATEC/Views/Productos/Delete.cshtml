@model PRUEBATEC.Models.ProductoModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Está seguro que desea eliminar este producto?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.NombreP</dd>

        <dt class="col-sm-2">SKU</dt>
        <dd class="col-sm-10">@Model.SKU</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
